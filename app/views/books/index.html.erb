<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(user) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>New Book</h1>
 <%= form_with model: @book do |f| %>
 <div class="field">
  <lavel>Title</lavel><br>
  <%= f.text_field :title %><br>
 </div>
 <div class="field">
  <lavel>Body</lavel><br>
  <%= f.text_area :body %><br>
 </div>
  <%= f.submit 'Create Book' %>
 <% end %>